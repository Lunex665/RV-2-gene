<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <GeneDef Abstract="True" Name="RV2_Strip">
    <geneClass>RimVore2.Gene_ForcedHediff</geneClass>
    <displayCategory>RV2_Vore_Strip</displayCategory>
    <displayOrderInCategory>300</displayOrderInCategory>
    <biostatMet>0</biostatMet>
  </GeneDef>

  <GeneDef ParentName="RV2_Strip">
    <defName>RV2_StripRandom</defName>
    <label>Skin taster</label>
    <description>the owner of this gene possesses acids that act indifferently with bare skin or not</description>
    <iconPath>UI/Icons/Genes/Oral</iconPath>
    <modExtensions>
      <li Class="RimVore2.GeneDefExtension_ForcedHediff">
        <hediffs>
          <li>Strip_Random</li>
        </hediffs>
        <removeHediffsOnGeneRemoval>true</removeHediffsOnGeneRemoval>
      </li>
    </modExtensions>
  </GeneDef>

  <GeneDef ParentName="RV2_Strip">
    <defName>RV2_StripCloth</defName>
    <label>Skin taster</label>
    <description>the owner of this gene possesses acids that need for clothing or armor to start digestion</description>
    <iconPath>UI/Icons/Genes/Oral</iconPath>
    <modExtensions>
      <li Class="RimVore2.GeneDefExtension_ForcedHediff">
        <hediffs>
          <li>Strip_Clothed</li>
        </hediffs>
        <removeHediffsOnGeneRemoval>true</removeHediffsOnGeneRemoval>
      </li>
    </modExtensions>
  </GeneDef>

  <GeneDef ParentName="RV2_Strip">
    <defName>RV2_StripNude</defName>
    <label>Skin taster</label>
    <description>the owner of this gene possesses acids that need for the bare skin to start the digestion</description>
    <iconPath>UI/Icons/Genes/Oral</iconPath>
    <modExtensions>
      <li Class="RimVore2.GeneDefExtension_ForcedHediff">
        <hediffs>
          <li>Strip_Nude</li>
        </hediffs>
        <removeHediffsOnGeneRemoval>true</removeHediffsOnGeneRemoval>
      </li>
    </modExtensions>
  </GeneDef>
  
</Defs>